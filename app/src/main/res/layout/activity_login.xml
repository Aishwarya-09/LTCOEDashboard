<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".LoginActivity">

    <!--The Icon Will be App Icon/ LTCOE Logo-->
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/loginIcon"
        android:layout_marginTop="@dimen/loginIconMarginTop"
        android:src="@mipmap/ic_launcher"/>

    <!--Floating Text Input & Needs to be Initialized in Main Activity-->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/uidTextInputFloating"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_below="@+id/loginIcon"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/uidTextInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/uicn_hint"/>
    </android.support.design.widget.TextInputLayout>

    <!--Floating Text Input & Needs to be Initialized in Main Activity-->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/usernameTextInputFloating"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_below="@+id/uidTextInputFloating"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/usernameTextInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/Username_hint"/>
    </android.support.design.widget.TextInputLayout>

    <!--Floating Text Input & Needs to be Initialized in Main Activity-->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/passwordTextInputFloating"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_below="@+id/usernameTextInputFloating"
        android:layout_height="wrap_content">
        <EditText
            android:inputType="textPassword"
            android:id="@+id/passwordTextInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password_hint"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:text="@string/strLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/passwordTextInputFloating"
        android:id="@+id/loginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
